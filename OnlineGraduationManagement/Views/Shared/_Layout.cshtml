<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Online Graduation Management", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"> 
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (Session["usr"] != null && Session["Au_Status"].ToString() == "Admin")
                    {
                        <li><a href="/AdminMa/Index"><span class="glyphicon glyphicon-education"></span> Management</a></li>
                    }
                </ul>
                @if(Session["usr"] == null) {
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/Login/Index"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                </ul>
                }
                else if (Session["usr"] != null && Session["Au_Status"].ToString() == "Student")
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/Login/Logoff"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                        <li><a href="#"><span class="glyphicon glyphicon-user"></span> Student @Session["Std_fname"] @Session["Std_lname"]</a></li>
                    </ul>
                }
                else if (Session["usr"] != null && Session["Au_Status"].ToString() == "Admin")
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/Login/Logoff"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                        <li><a href="#"><span class="glyphicon glyphicon-user"></span> Admin @Session["Name"]</a></li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
