
@{
    ViewBag.Title = "Index";
}

<div class="container" style="width:550px;margin-top:100px">
    <div class="panel panel-default">
        <div class="panel-heading text-center w3-teal">Login</div>
        <div class="panel-body">
            @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
            {
                
                <div class="form-group" style="width:auto">
                    <label class="control-label col-sm-3" for="usr">UserName:</label>
                    <div class="col-sm-10" style="width:350px">
                        @Html.TextBox("usr", null, null, new { @class = "form-control", @placeholder = "Enter User" })
                    </div>
                </div>
                <div class="form-group" style="width:auto">
                    <label class="control-label col-sm-3" for="pwd">Password:</label>
                    <div class="col-sm-10" style="width:350px">
                        @Html.Password("pwd", null, new { @class = "form-control", @placeholder = "Enter password" })
                        @Html.Hidden("MacAdr", null, new { @id = "MAC" })
                    </div>
                </div>
                <div class="form-group" style="width:auto">
                    <div class="col-sm-offset-3 col-sm-10">
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

